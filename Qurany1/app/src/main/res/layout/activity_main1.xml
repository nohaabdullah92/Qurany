<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nohaaubdalh.qurany1.MainActivity1"
    android:background="@drawable/mousq">
    <Button
        android:layout_width="119dp"
        android:layout_height="70dp"
        android:text="التلاوه"
        android:id="@+id/button"
        android:contextClickable="true"
        android:textStyle="bold|italic"
        android:textSize="36dp"
        android:textColor="#b414b1"
        android:background="@drawable/pa"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="إحكام التجويد"
        android:id="@+id/button2"
        android:background="@drawable/pa"
        android:textSize="36dp"
        android:textStyle="bold"
        android:textColor="#b414b1"
        android:layout_below="@+id/button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="إختبارات"
        android:id="@+id/button3"
        android:background="@drawable/pa"
        android:textSize="36dp"
        android:textStyle="bold"
        android:textColor="#b414b1"
        android:layout_below="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        android:allowUndo="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="الخروج"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3"
        android:background="@drawable/pa"
        android:textColor="#b414b1"
        android:textSize="36dp"
        android:textStyle="bold|normal|italic" />
</RelativeLayout>
