<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nohaaubdalh.qurany1.QuizeActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:layout_alignParentLeft="true"
            android:id="@+id/score1"
            android:textSize="24dp"
            android:textColor="@color/accent_material_light"
            android:textStyle="bold|normal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/score2"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textSize="26dp"/>

    </RelativeLayout>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="which thing is alive?"
        android:textSize="25dp"
        android:padding="40dp"
        android:id="@+id/questions"
        android:textStyle="bold|normal|italic"
        android:textColor="@color/colorPrimaryDark"

        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="brid"
        android:id="@+id/choise1"

        android:textColor="#fdfdfd"
        android:background="#79b5d1"
        android:layout_below="@+id/questions"
        android:layout_alignRight="@+id/choise2"
        android:layout_alignEnd="@+id/choise2"
        android:padding="9dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="book"
        android:padding="9dp"
        android:id="@+id/choise2"
        android:textColor="#fdfdfd"
        android:background="#79b5d1"
        android:layout_below="@+id/choise1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rock"
        android:padding="9dp"
        android:id="@+id/choise3"

        android:textColor="#fdfdfd"
        android:background="#79b5d1"
        android:layout_below="@+id/choise2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="الصفحة الرئيسية"
        android:padding="8dp"
        android:id="@+id/choise4"

        android:textColor="#fdfdfd"
        android:background="#187370"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="26dp" />

      </RelativeLayout>


</RelativeLayout>
